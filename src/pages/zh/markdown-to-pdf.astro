---
import BaseLayout from "../../partials/BaseLayout.astro";
import {
  adBlockerContent,
  downloadFile,
  edit_page,
  errors,
  tool,
  tools,
} from "../../content/content-zh";
import { Provider as ReduxProvider } from "react-redux";
import { configureStore } from "@reduxjs/toolkit";
import toolReducer from "../../store";
import { ToolWrapper } from "../../../components/ToolWrapper";
export const store = configureStore({
  reducer: {
    tool: toolReducer,
  },
});
---

<BaseLayout seoConfig={tool.Markdown_to_PDF}>
  <ReduxProvider store={store}>
    <ToolWrapper
      client:load
      tools={tools}
      data={tool.Markdown_to_PDF}
      lang="zh"
      errors={errors}
      edit_page={edit_page}
      pages={edit_page.pages}
      page={edit_page.page}
      downloadFile={downloadFile}
      to={tool.Markdown_to_PDF.to}
      seoTitle={tool.Markdown_to_PDF.seoTitle}
      adBlockerContent={adBlockerContent}
    />
  </ReduxProvider>
</BaseLayout>
